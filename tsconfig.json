{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "paths": {
      "@functions/*": [
        "./src/functions/*"
      ],
      "@lib/*": [
        "./src/libs/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}